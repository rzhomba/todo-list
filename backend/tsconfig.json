{
  "compilerOptions": {
    "target": "ES2016",
    "outDir": "./dist/",
    "sourceMap": true,
    "module": "ES2022",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
  },
  "include": [
    "./**/*.ts"
  ]
}
